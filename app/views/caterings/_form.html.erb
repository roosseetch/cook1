<%= form_for @catering do |f| %>
  <% if @catering.errors.any? %>
    
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Please fix: <%= pluralize(@catering.errors.count, "error") %></h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @catering.errors.full_messages.each do |msg| %>
            <li>
            <%= msg %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

  <% end %>
	<p>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control input-sm' %>
  </p>

	<p>
    <%= f.label :adress %><br>
    <%= f.text_field :adress, class: 'form-control input-sm'  %>
  </p>

	<p>
    <%= f.label :phone %><br>
    <%= f.telephone_field :phone, class: 'form-control input-sm'  %>
  </p>

	<p>
    <%= f.label :email %><br>
    <%= f.email_field :email, class: 'form-control input-sm'  %>
  </p>

	<p>
    <%= f.label :work_time %><br>
    <%= f.text_area :work_time, class: 'form-control' %>
  </p>

	<p>
    <%= f.label :minimum_order %><br>
    <%= f.text_field :minimum_order, class: 'form-control input-sm'  %>
  </p>

	<p>
    <%= f.label :delivery_price %><br>
    <%= f.text_field :delivery_price, class: 'form-control input-sm'  %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </p>

  <p>
    <%= link_to "Cancel", caterings_path, class: 'btn btn-default'  %> 
    <%= f.submit 'Submit', :class => 'btn btn-success' %>
  </p>
<% end %>